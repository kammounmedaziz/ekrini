# Car Rental Platform Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/car_rental_platform?authSource=admin
MONGODB_DB_NAME=car_rental_platform
MONGODB_TEST_DB_NAME=car_rental_platform_test

# Server Configuration
PORT=3000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Service Ports
AUTH_SERVICE_PORT=3001
AGENCY_SERVICE_PORT=3002
SEARCH_SERVICE_PORT=3003
RESERVATION_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
REVIEW_SERVICE_PORT=3006

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_AUTH_SERVICE=http://localhost:3001
REACT_APP_AGENCY_SERVICE=http://localhost:3002
REACT_APP_SEARCH_SERVICE=http://localhost:3003
REACT_APP_RESERVATION_SERVICE=http://localhost:3004
REACT_APP_PAYMENT_SERVICE=http://localhost:3005
REACT_APP_REVIEW_SERVICE=http://localhost:3006

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="Car Rental Platform" <noreply@carrentalplatform.com>

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys
MAPS_API_KEY=your_google_maps_api_key
GEOCODING_API_KEY=your_geocoding_api_key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Docker Configuration
COMPOSE_PROJECT_NAME=car-rental-platform
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=password123

# Development Configuration
DEBUG_MODE=true
HOT_RELOAD=true
ENABLE_SWAGGER=true
API_DOCS_PATH=/api-docs

# Search Configuration (if using Elasticsearch)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=car_rental

# Monitoring & Analytics
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
